#
# Custom aliases
#

xep() {
    if [ "$1" != "" ]; then
        Xephyr -br -ac -noreset -fullscreen -screen $(xdpyinfo | awk '/dimensions/{print $2}') :$1
    else
        xep 1
    fi
}

xepi3() {
    if [ "$1" = "" ]; then
        xep &
        until xdpyinfo -display :1
        do
            sleep 1
        done
        DISPLAY=:1 i3
    else
        xep $1 &
        until xdpyinfo -display :$1
        do
            sleep 1
        done
        DISPLAY=:$1 i3
    fi
}

xepxfce4() {
    if [ "$1" = "" ]; then
        xep &
        until xdpyinfo -display :1
        do
            sleep 1
        done
        DISPLAY=:1 startxfce4
    else
        xep $1 &
        until xdpyinfo -display :$1
        do
            sleep 1
        done
        DISPLAY=:$1 startxfce4
    fi
}

